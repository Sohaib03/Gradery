<%- include('./partials/header.ejs') %>
<%- include('./partials/navbar.ejs') %>
<div >
<h3> <%= team_name %> </h3>
<h1> Team Code : <%= team_code %> </h1>

<div> 
    <table class="table">
        <tr> <th> Participants </th> </tr>
        <% for (let i=0; i<participants.length; i++) { %>
        <tr><td> <%= participants[i].USERNAME %> </td></tr>
        <% } %>
    </table>

    <div>
        <<h1>General</h1>
    </div>
</div>

<div>
    <b>Assignments</b><br>
    
    <div class="cards">
        <% for (let i=0; i<assignments.length; i++){ %>
          <div class="card">
            <header class="card-header">
              <p class="card-header-title">
                Assignment <%= i+1 %>
              </p>
              <button class="card-header-icon" aria-label="more options">
                <span class="icon">
                  <i class="fas fa-angle-down" aria-hidden="true"></i>
                </span>
              </button>
            </header>
            <div class="card-content">
              <div class="content">
                <p> Assignment ID: <%= assignments[i].ASSIGNMENT_ID %> <p>
                <p> <b><%= assignments[i].ASSIGNMENT_TITLE %> <b><p>
                <p> Deadline: <%= assignments[i].DEADLINE %> <p>
              </div>
            </div>
          </div>
        <% } %>
    </div>

</div>

<% if (role === 0) { %>
<div class="column is-6">
    <p> Create a New Notification </p>
    <form action="/teams/code/<%= team_code %>/notify" method="POST">
        <label class="label">Title </label>
        <input name="notif_title" class="input" type="text" >
        <label class="label">Details </label>
        <input name="notif_content" class="input" type="text" >
        <button class="button is-primary" type="submit"> Notify </button>
    </form>
</div>

<% } %>

<div class="column is-6">
    <% for (let i=0; i<notifications.length; i++) { %>
    <div class="box">
        <p> <%= notifications[i].TITLE %> </p>
        <p><%= notifications[i].CONTENT %> </p>
        <p><%= notifications[i].TIMESTAMP %> </p>
    </div>
    <% } %>
</div>


</div>
<%- include('./partials/footer.ejs') %>
